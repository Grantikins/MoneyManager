<html>

    <%- include("./partials/head.ejs") %>

    <body class="">

        <%- include("./partials/nav.ejs") %>

        <div class="container">

            <h4 class="t-form-title">Transaction Form</h4>

            <form method="POST" action="/input" class="t-form">

                <div class="t-form-input">
                    <label>Amount:</label>
                    <input type="number" id="amount" name="amount" required>
                </div>

                <div class="t-form-input">
                    <label>Category:</label>
                    <input list="categories" id="category" name="category" required>
                    <datalist id="categories">
                        <option value="Groceries"></option>
                        <option value="Food"></option>
                        <option value="Car"></option>
                        <option value="Home/Residence"></option>
                        <option value="Entertainment"></option>
                        <option value="Shopping"></option>
                        <option value="Health"></option>
                        <option value="Gift"></option>
                    </datalist>
                </div>

                <div class="t-form-input">
                    <label>Date:</label>
                    <input type="date" id="date" name="date">
                </div>

                <button type="submit" class="btn bg-color-primary submit-hover">Submit</button>
            </form>
            
        </div>

    </body>

</html>